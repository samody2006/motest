{% extends 'base.html.twig' %}

{% block title %}We Friends!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
  {% if users %}
    <table id="users" class="table table-striped">
      <thead>
        <tr>
          <th>User Names</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for user in users %}
          <tr>
            <td>{{ user.name }}</td>
            <td>
              <a href="/user/{{ user.id }}" class="btn btn-info">Show</a>
              
              </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% else %}
    <p>No users to display</p>
  {% endif %}
{% endblock %}
